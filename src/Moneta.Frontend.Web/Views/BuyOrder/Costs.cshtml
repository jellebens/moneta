@model Moneta.Frontend.Web.Models.TransactionCostsModel

@{
    ViewData["Title"] = "New  buy order";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
&                    <h5>Provide the costs of the buyorder</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Costs", "BuyOrder", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Commission:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.Commission, new { @class = "form-control m-b" })</div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Exch. Rate Costs:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.CostExchangeRate, new { @class = "form-control m-b" })</div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">stock market tax:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.StockMarketTax, new { @class = "form-control m-b"})</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary btn-sm float-right" type="submit">Next</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

