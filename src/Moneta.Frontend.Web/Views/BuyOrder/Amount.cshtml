@model Moneta.Frontend.Web.Models.TransactionAmountModel

@{
    ViewData["Title"] = "New  buy order";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Enter the amoutns of the buyorder</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Amount", "BuyOrder", FormMethod.Post))
                    {
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Quantity:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.Quantity, new { @class = "form-control m-b" })</div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Price:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.Price, new { @class = "form-control m-b" })</div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Exchangerate:</label>
                            <div class="col-sm-9">@Html.TextBoxFor(m => m.Exchangerate, new { @class = "form-control m-b" })</div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <button class="btn btn-primary btn-sm float-right" type="submit">Next</button>
                            </div>
                        </div>
                        @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "")
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
